---
// ProjectCard.astro
interface Props {
  title: string;
  description: string;
  thumbnail: string;
  url: string;
  tags?: string[];
}

const { title, description, thumbnail, url, tags = [] } = Astro.props;
---

<div class="group">
  <a
    href={url}
    class="block transition-all duration-300 hover:shadow-xl dark:hover:shadow-gray-800 rounded-lg overflow-hidden"
  >
    <div
      class="relative aspect-video overflow-hidden bg-gray-100 dark:bg-gray-800"
    >
      <img
        src={thumbnail}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>

    <div
      class="p-4 bg-white dark:bg-gray-900 border-b border-l border-r border-gray-200 dark:border-gray-800 rounded-b-lg"
    >
      <h3
        class="font-bold text-lg mb-2 text-gray-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"
      >
        {title}
      </h3>

      <p class="text-gray-700 dark:text-gray-300 text-sm mb-3">
        {description}
      </p>

      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded">
                {tag}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </a>
</div>
