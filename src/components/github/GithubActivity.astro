---
import SectionHeading from "../ui/SectionHeading.astro";
import ButtonLink from "../ui/ButtonLink.astro";
import GithubActivityFeed from "../github/GithubActivityFeed.tsx";
import SocialIconLink from "../ui/SocialIconLink.astro";
---

<section class="py-8">
  <SectionHeading title="GitHub Activity" />

  <div
    class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6"
  >
    <div class="flex items-center mb-6">
      <SocialIconLink name="github" href="https://github.com/mstarrk" class="text-primary">
        <h3 class="text-xl font-semibold">Recent Activity</h3>
      </SocialIconLink>
    </div>

    <GithubActivityFeed client:load />

    <div class="mt-6 text-center">
      <ButtonLink
        href="https://github.com/mstarrk"
        variant="secondary"
        target="_blank"
        rel="noopener noreferrer"
      >
        View GitHub Profile
      </ButtonLink>
    </div>
  </div>
</section>
