---
const { focusAreas } = Astro.props;
---

<section aria-labelledby="focus-heading" class="mt-10">
  <h1 class="text-2xl font-bold text-gray-300 dark:text-gray-200 mb-6">
    Currently Focusing On
  </h1>

  <div class="space-y-10">
    {
      focusAreas.map((area: { title: string; items: string[] }) => (
        <section>
          <h3 class="text-xl font-semibold mb-4 inline-flex items-center">
            <span>{area.title}</span>
            <div class="h-1 w-10 bg-primary rounded ml-2" />
          </h3>

          <ul class="space-y-3">
            {area.items.map((item: string) => (
              <li class="flex items-start">
                <span class="inline-block w-5 h-5 mt-0.5 mr-3 flex-shrink-0 text-primary">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </div>
</section>
