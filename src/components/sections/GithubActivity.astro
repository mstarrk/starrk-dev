---
import SectionHeading from "../ui/SectionHeading.astro";
import ButtonLink from "../ui/ButtonLink.astro";

const recentActivities = [
  {
    repo: "mstarrk/portfolio",
    action: "Push",
    date: "2 days ago",
    description: "Updated theme and fixed responsive layout",
  },
  {
    repo: "mstarrk/project-tracker",
    action: "PR merged",
    date: "5 days ago",
    description: "Added task filtering and sorting functionality",
  },
  {
    repo: "open-source/some-library",
    action: "Issue",
    date: "1 week ago",
    description: "Reported and fixed a bug in the API handler",
  },
];
---

<section class="py-8">
  <SectionHeading title="GitHub Activity" />

  <div
    class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6"
  >
    <div class="flex items-center mb-6">
      <svg
        viewBox="0 0 24 24"
        class="h-6 w-6 mr-3 text-primary"
        fill="currentColor"
      >
        <path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path>
      </svg>
      <h3 class="text-xl font-semibold">Recent Activity</h3>
    </div>

    <ul class="space-y-4">
      {
        recentActivities.map((activity) => (
          <li class="border-b border-gray-200 dark:border-gray-700 pb-4 transition-transform duration-300 hover:translate-x-1">
            <div class="flex items-start">
              <div class="flex-grow">
                <div class="flex items-center">
                  <a
                    href={`https://github.com/${activity.repo}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="font-medium text-primary hover:underline transition-colors"
                  >
                    {activity.repo}
                  </a>
                  <span class="ml-2 px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-700">
                    {activity.action}
                  </span>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mt-1">
                  {activity.description}
                </p>
                <span class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                  {activity.date}
                </span>
              </div>
            </div>
          </li>
        ))
      }
    </ul>

    <div class="mt-6 text-center">
      <ButtonLink
        href="https://github.com/mstarrk"
        variant="secondary"
        target="_blank"
        rel="noopener noreferrer"
      >
        View GitHub Profile
      </ButtonLink>
    </div>
  </div>
</section>
