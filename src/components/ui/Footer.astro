---
import SocialIconLink from "./SocialIconLink.astro";

const currentYear = new Date().getFullYear();

// Social links
const socialLinks = [
  { name: "GitHub", url: "https://github.com/mstarrk" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/morales-r-juanjose/" },
  { name: "RSS", url: "/rss.xml" },
];

// Navigation sections
const navSections = [
  {
    title: "Pages",
    links: [
      { text: "Home", href: "/" },
      { text: "About", href: "/about" },
      { text: "Works", href: "/works" },
      { text: "Blog", href: "/blog" },
      { text: "Contact", href: "/contact" },
    ],
  },
  {
    title: "Social",
    links: [
      { text: "GitHub", href: "https://github.com/mstarrk" },
      {
        text: "LinkedIn",
        href: "https://www.linkedin.com/in/morales-r-juanjose/",
      },
      { text: "Twitter", href: "https://twitter.com/" },
    ],
  },
];
---

<footer class="border-t border-gray-200 dark:border-gray-800 py-8 mt-16">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Logo and description -->
    <div>
      <div class="font-bold text-xl mb-4">
        <span
          class="bg-clip-text bg-gradient-to-r from-[rgb(var(--primary))] to-[rgb(var(--accent))]"
        >
          JM
        </span>
      </div>
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
        Full Stack Developer specializing in modern web development and
        technical operations.
      </p>
      <div class="flex space-x-4">
        {
          socialLinks.map((link) => (
            <SocialIconLink href={link.url} name={link.name} />
          ))
        }
      </div>
    </div>

    <!-- Navigation sections -->
    {
      navSections.map((section) => (
        <div>
          <h3 class="font-semibold mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary-light transition-colors text-sm"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>

  <div
    class="border-t border-gray-200 dark:border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center"
  >
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 md:mb-0">
      Â© {currentYear} Juan Jose Morales. All rights reserved.
    </p>
    <p class="text-sm text-gray-500 dark:text-gray-500">
      Built with <a
        href="https://astro.build"
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary hover:text-primary-dark dark:text-primary-light dark:hover:text-primary transition-colors"
        >Astro</a
      > and
      <a
        href="https://tailwindcss.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary hover:text-primary-dark dark:text-primary-light dark:hover:text-primary transition-colors"
        >Tailwind CSS</a
      >
    </p>
  </div>
</footer>
