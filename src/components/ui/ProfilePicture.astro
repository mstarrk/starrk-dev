---
import profileImage from "../../assets/profile.jpg";

const { size = 128 } = Astro.props;
---

<img
  src={profileImage.src}
  alt="Profile Picture"
  width={size}
  height={size}
  class="rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-lg"
  style={`width: ${size}px; height: ${size}px;`}
/>
