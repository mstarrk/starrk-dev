---
interface Props {
  title: string;
  level?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { title, level = "h2" } = Astro.props;
const Tag = level;
---

<Tag class="text-2xl font-bold mb-8 inline-flex items-center">
  <span>{title}</span>
  <div class="h-1 w-16 bg-primary rounded ml-2"></div>
</Tag>
