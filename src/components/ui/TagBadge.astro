---
import { getTagColor } from "../../utils/tag-colors";

interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<a
  href={`/tags/${tag}`}
  class={`inline-block px-3 py-1 text-xs font-medium rounded-full hover:opacity-80 transition-opacity ${getTagColor(
    tag
  )}`}
>
  #{tag}
</a>
